<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ============================== Text appearances ============================== -->

    <style name="details_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="details_subtitle">
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="details_card">
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="details_section_title">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="details_fact">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
        <item name="android:textSize">@dimen/text_size_facts</item>
    </style>

    <style name="headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="headline_fun" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/satisfy</item>
        <item name="fontFamily">@font/satisfy</item>
    </style>

    <style name="body_content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginBottom">@dimen/bigger_padding</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ============================== Buttons ============================== -->

    <style name="Widget.AppCompat.Button.Borderless.Colored" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="primary_button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="supplemental_action_button">
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>